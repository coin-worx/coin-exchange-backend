<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://www.springframework.net http://www.springframework.net/xsd/spring-objects.xsd">

  <object id="MarketController" type="CoinExchange.Trades.Port.Adapter.Rest.Resources.MarketController, CoinExchange.Trades.Port.Adapter.Rest" singleton="false">
    <constructor-arg name="marketDataQueryService" ref="MarketDataQueryService"/>
  </object>

  <object id="MarketDataQueryService" type="CoinExchange.Trades.Application.MarketDataServices.MarketDataQueryService, CoinExchange.Trades.Application">
  <constructor-arg name="orderBookMemoryImage" ref="OrderBookMemoryImage"/>  
  <constructor-arg name="depthMemoryImage" ref="DepthMemoryImage"/>
  <constructor-arg name="bboMemoryImage" ref="BBOMemoryImage"/>
  </object>

  <object id="OrderBookMemoryImage" type="CoinExchange.Trades.ReadModel.MemoryImages.OrderBookMemoryImage, CoinExchange.Trades.ReadModel" />
  <object id="DepthMemoryImage" type="CoinExchange.Trades.ReadModel.MemoryImages.DepthMemoryImage, CoinExchange.Trades.ReadModel" />
  <object id="BBOMemoryImage" type="CoinExchange.Trades.ReadModel.MemoryImages.BBOMemoryImage, CoinExchange.Trades.ReadModel" />

</objects>